<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<h1><%= @question.title %></h1>
			<p>
			  <%= @question.content %>
			</p>
			<p>
			  Asked by <%= @question.user.name %>
			</p>
			<% if current_user == @question.user %>
				<%= link_to 'Edit', edit_question_path(@question) %> |
			<% end %>
			<%= link_to 'Back', questions_path %>
		</div>
	</div>
</div>

